<form method="POST" action="/login" class="login-container" id="form">
	<h1>Login to Minecraft web console</h1>
	<h4>Username: </h4>
	<input type="text" id="login-username">
	<h4>Password: </h4>
	<input type="password" id="login-password">
	{{#if message}}
		<h5>{{message}}</h5>
	{{/if}}
	<button type="submit">Login</submit>
</form>
